{
  "name": "FelFire",
  "version": "0.2.4",
  "description": "FelFire image sharing service.",
  "homepage": "https://felfire.app",
  "engines": {
    "node": ">=9.0.0",
    "npm": ">=5.0.0",
    "yarn": ">=1.0.0"
  },
  "main": "./app/build/app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=0 webpack-dev-server --hot --config=./webpack/dev.config.js --mode development",
    "prod": "cross-env NODE_ENV=production webpack --mode production --config webpack/prod.config.js && electron --noDevServer ./app/build/app.js",
    "build": "webpack --config webpack/prod.config.js --mode production",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Joseph Ali",
  "build": {
    "appId": "felfire.app",
    "productName": "FelFire",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "perMachine": true,
      "artifactName": "${productName}Setup.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://api.felfire.app/"
      }
    ]
  },
  "dependencies": {
    "electron-json-storage": "^4.1.8",
    "electron-log": "^3.0.9",
    "electron-updater": "^4.2.0",
    "jwt-decode": "^2.2.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babili-webpack-plugin": "^0.1.2",
    "copy-webpack-plugin": "^5.0.5",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "electron": "^6.0.7",
    "electron-builder": "^22.1.0",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-pxtorem": "^4.0.1",
    "style-loader": "^1.0.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  }
}
